<isset name="creditFields" value="${pdict.forms.billingForm.creditCardFields}" scope="page"/>

<!--- Hidden input for credit card type --->
<input type="hidden" id="cardType"
    name="${creditFields.cardType.htmlName}"
    value="">

<!--- Hidden input for credit card number --->
<input type="text" class="cardNumber" id="cardNumber"
    name="${creditFields.cardNumber.htmlName}"
    value=""
    <isprint value=${creditFields.cardNumber.attributes} encoding="on"/>
>
